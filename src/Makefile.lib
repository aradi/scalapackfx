###############################################################################
#
# Library makefile
#
# Compiles and links scalapackfx in the current directory.
#
# Needs following variables:
#     FXX: Fortran 2003 compiler
#     FXXOPT: Options for the Fortran 2003 compiler
#     M4: M4 macro processor
#     M4OPT: Options for the M4 macro processor.
#     SRCDIR: Folder where source files can be found
#
###############################################################################

.SUFFIXES:
.SUFFIXES: .f90 .F90 .o

TARGETLIB = libscalapackfx.a

vpath % $(SRCDIR)

.PHONY: all
all: $(TARGETLIB)

include $(SRCDIR)/Makefile.dep

$(TARGETLIB): $(libscalapackfx.o)
	ar r $@ $^

%.f90: %.F90
	$(M4) -I$(SRCDIR) $(M4OPT) $< > $@

%.o: %.f90
	$(FXX) $(FXXOPT) -c $<


.PHONY: clean realclean
clean:
	rm -f *.o

distclean: clean
	rm -f *.mod
	rm -f $(TARGETLIB)


### Local Variables:
### mode:makefile
### End:
